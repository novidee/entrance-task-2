{% set filters = [{
  text: "Вручную",
  isActive: true
}, {
  text: "Холодно"
}, {
  text: "Тепло"
}, {
  text: "Жарко"
}] %}

{% set content %}
  <div>
    {% include "./filter.twig" with {filters} %}
  </div>
{% endset %}

